<?xml version="1.0" encoding="utf-8" ?>
<views:MyContentPage
    x:Class="Apps.Modules.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Apps.Modules.Views"
    Title="HomePage">
    <VerticalStackLayout Padding="15" VerticalOptions="Center">

        <Label Text="{Binding PrincipalUser.UserID}" />
        <Label Text="{Binding PrincipalUser.Email}" />

        <Button
            BackgroundColor="Blue"
            Command="{Binding ChangeEmailCommand}"
            Text="Mudar Email" />

        <Button
            BackgroundColor="Red"
            Command="{Binding LogoutCommand}"
            Text="Logout" />
    </VerticalStackLayout>
</views:MyContentPage>
