<?xml version="1.0" encoding="utf-8" ?>
<views:MyContentPage
    x:Class="Apps.Modules.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:views="clr-namespace:Apps.Modules.Views"
    xmlns:vm="clr-namespace:Core.Modules.ViewModels;assembly=Core"
    Title="HomePage">
    <VerticalStackLayout Padding="15" Spacing="10" VerticalOptions="Center">

        <Label Text="{Binding PrincipalUser.UserID}" />
        <Label Text="{Binding PrincipalUser.Email}" />

        <!--<Button
            BackgroundColor="Blue"
            Command="{Binding ChangeEmailCommand}"
            Text="Mudar Email" />-->

        <Button
            BackgroundColor="Red"
            Command="{Binding LogoutCommand}"
            Text="Logout" />

        <Button
            BackgroundColor="Blue"
            Command="{Binding NavToAccountManagerPageCommand}"
            CommandParameter="{x:Static vm:eAccountEditor.ChangeEmail}"
            Text="Mudar Email" />

        <Button
            BackgroundColor="Blue"
            Command="{Binding NavToAccountManagerPageCommand}"
            CommandParameter="{x:Static vm:eAccountEditor.ChangePassword}"
            Text="Mudar Senha" />

    </VerticalStackLayout>
</views:MyContentPage>
