<?xml version="1.0" encoding="utf-8" ?>
<views:MyContentPage
    x:Class="Apps.Modules.Views.RegisterConfirmationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Apps.Modules.Views"
    Title="RegisterConfirmationPage"
    Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout
        Padding="15"
        Spacing="10"
        VerticalOptions="Center">

        <Label
            HorizontalOptions="Center"
            TextType="Html"
            VerticalOptions="Center">
            <![CDATA[
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed:
                </p>
            ]]>
        </Label>

        <Button
            BackgroundColor="Transparent"
            Command="{Binding RegisterConfirmationCommand}"
            Text="Click here to confirm your account"
            TextColor="Gray"
            VerticalOptions="End" />

    </VerticalStackLayout>
</views:MyContentPage>
