<?xml version="1.0" encoding="utf-8" ?>
<views:MyContentPage
    x:Class="Apps.Modules.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Apps.Modules.Views"
    Title="RegisterPage"
    Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout VerticalOptions="Center">
        <VerticalStackLayout
            Padding="15"
            Spacing="10"
            VerticalOptions="Center">

            <Entry Placeholder="Email" Text="{Binding InputModel.Email}" />

            <Entry
                IsPassword="True"
                Placeholder="Senha"
                Text="{Binding InputModel.Password}" />

            <Entry
                IsPassword="True"
                Placeholder="Confirmar Senha"
                Text="{Binding InputModel.ConfirmPassword}" />


            <Button
                BackgroundColor="Blue"
                Command="{Binding LoginCommand}"
                Text="Login" />

            <!--<Button
        BackgroundColor="Red"
        Command="{Binding LogoutCommand}"
        Text="Logout" />-->
        </VerticalStackLayout>
    </VerticalStackLayout>
</views:MyContentPage>
